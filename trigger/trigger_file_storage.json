{
	"name": "trigger_file_storage",
	"properties": {
		"description": "if you drop a customer file it will run pl_st_event_trigger pipeline ",
		"annotations": [],
		"runtimeState": "Started",
		"pipelines": [
			{
				"pipelineReference": {
					"referenceName": "pl_st_event_trigger",
					"type": "PipelineReference"
				},
				"parameters": {
					"fname": "@triggerBody().fileName",
					"cname": "@triggerBody().folderPath"
				}
			}
		],
		"type": "BlobEventsTrigger",
		"typeProperties": {
			"blobPathBeginsWith": "/input/blobs/customer",
			"blobPathEndsWith": ".txt",
			"ignoreEmptyBlobs": true,
			"scope": "/subscriptions/887482da-cd1c-4447-a2c2-358a49479a72/resourceGroups/DE/providers/Microsoft.Storage/storageAccounts/demolg01",
			"events": [
				"Microsoft.Storage.BlobCreated"
			]
		}
	}
}